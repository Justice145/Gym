@model IEnumerable<WebApplication1.Models.Branch>

@{
    ViewBag.Title = "Index";
}

<body>
	@if (ViewBag.displayMenu == "Yes")
	{
	    <p>
	        @Html.ActionLink("Create New", "Create")
	    </p>
	}
	<table class="table">
	    <tr>
	        <th>
	            Address
	        </th>
	        <th>
	            Phone Number
	        </th>
	        <th>
	            Weekdays Hours
	        </th>
	        <th>
	            Friday Hours
	        </th>
	        <th>
	            Saturday Hours
	        </th>
	        <th></th>
	    </tr>

	    @foreach (var item in Model)
	    {
	        <tr>
	            <td>
	                @Html.DisplayFor(modelItem => item.Address)
	            </td>
	            <td>
	                @Html.DisplayFor(modelItem => item.PhoneNumber)
	            </td>
	            <td>
	                @Html.DisplayFor(modelItem => item.WeekDayOpen) - @Html.DisplayFor(modelItem => item.WeekDayClose)
	            </td>
	            <td>
	                @Html.DisplayFor(modelItem => item.FridayOpen) - @Html.DisplayFor(modelItem => item.FridayClose)
	            </td>
	            <td>
	                @Html.DisplayFor(modelItem => item.SaturdayOpen) - @Html.DisplayFor(modelItem => item.SaturdayClose)
	            </td>
	            <td>
	                @Html.ActionLink("Details", "Details", new { id = item.Id }) | 
	                @if (ViewBag.displayMenu == "Yes")
	                {
	                    @Html.ActionLink("Edit | ", "Edit", new { id = item.Id })
	                    @Html.ActionLink(" Delete", "Delete", new { id = item.Id })
	                }
	            </td>
	        </tr>
	    }

	</table>

	<div>
	    @Html.ActionLink("Search by parameters", "Search")
	    <p>    </p>
	    @Html.ActionLink("All Branches", "Index")
	</div>
</body>