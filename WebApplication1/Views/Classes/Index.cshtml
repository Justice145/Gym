@model IEnumerable<WebApplication1.Models.Class>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (ViewBag.displayMenu == "Yes")
{ 
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Branch.Address)
        </th>
        <th>
            Trainer Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Branch.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trainer.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @if (ViewBag.displayMenu == "Yes")
                {
                    @Html.ActionLink("Edit | ", "Edit", new { id = item.Id }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }

            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Search by parameters", "Search")
    <p>    </p>
    @Html.ActionLink("All Classes", "Index")
</div>
